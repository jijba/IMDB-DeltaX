@model IEnumerable<IMDB.Models.Movie>

@{
    ViewData["Title"] = "IMDB";
}
<h2 style="text-align:center">IMDB</h2>
<p>
    <a asp-action="Create">Create New Movie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plot)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Producer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year_Of_Release)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actors)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="@Url.Content(item.Poster)" alt="Image" style="max-width:100px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plot)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Producer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year_Of_Release)
            </td>
            <td>
                <ul>
                    @foreach (var actor in item.Actors)
            {
                <li>@Html.DisplayFor(modelItem => actor)</li>
    }
                </ul>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Movie_ID">Edit</a>
            </td>
        </tr>
        }
    </tbody>
</table>  